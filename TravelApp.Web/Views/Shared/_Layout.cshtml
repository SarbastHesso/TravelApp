<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap Dark Theme -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100vh;
            background-color: #121212;
            color: #f8f9fa;
        }

        main {
            flex: 1;
        }

        a, label {
            color: #f8f9fa;
        }

        .form-control,
        .form-select {
            background-color: #1e1e1e;
            color: #f8f9fa;
            border-color: #333;
        }

            .form-control:focus {
                background-color: #1e1e1e;
                color: #fff;
                border-color: #555;
                box-shadow: none;
            }

        .list-group-item {
            background-color: #1e1e1e;
            color: #f8f9fa;
            border-color: #333;
        }

            .list-group-item:hover {
                background-color: #2c2c2c;
            }
    </style>
</head>
<body class="d-flex flex-column">

    <header class="bg-dark p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h2 class="text-white mb-0">@ViewBag.Title</h2>
            <nav>
                <a class="btn btn-outline-light me-2" asp-controller="Travels" asp-action="Index">Home</a>
                <a class="btn btn-outline-light" asp-controller="Travels" asp-action="Create">Create</a>
            </nav>
        </div>
    </header>

    <main class="container my-4 d-flex flex-column">
        @RenderBody()
    </main>

    <footer class="bg-dark text-center text-light py-3 mt-auto">
        <small>&copy; 2025 TravelApp</small>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
